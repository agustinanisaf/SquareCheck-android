<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="com.squarecheck.shared.model.Title" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin8dp"
        android:layout_marginEnd="@dimen/margin8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{title.title}"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="16sp"
            tools:text="@string/subject_placeholder" />

        <TextView
            android:id="@+id/tv_classroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{title.description}"
            android:textAlignment="center"
            android:textColor="@color/white60p"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            tools:text="@string/classroom_placeholder" />

    </LinearLayout>
</layout>
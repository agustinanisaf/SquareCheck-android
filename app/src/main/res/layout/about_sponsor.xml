<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/logo_supporter1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sponsor_height"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_virtuahive_300dpi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_supporter2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sponsor_height"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@id/logo_supporter1"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_rasyidtechnologies_300dpi"
        app:layout_constraintStart_toEndOf="@+id/logo_supporter1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/logo_margin"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="146dp"
        android:layout_height="32dp"
        android:layout_below="@id/logo_supporter1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/logo_supporter3"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_maulidangames_landscape_300dpi"
        app:layout_constraintStart_toEndOf="@+id/logo_supporter3"
        app:layout_constraintTop_toBottomOf="@+id/logo_supporter2" />

    <ImageView
        android:id="@+id/logo_supporter3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sponsor_height"
        android:layout_below="@id/logo_supporter1"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/pti___logo_new__lq_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_supporter1" />

</androidx.constraintlayout.widget.ConstraintLayout>
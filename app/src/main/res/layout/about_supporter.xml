<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/logo_supporter1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sponsor_height"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo___sinergi_dimensi_informatika"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_supporter2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sponsor_height"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@id/logo_supporter1"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_rasyidinstitute_300dpi"
        app:layout_constraintStart_toEndOf="@+id/logo_supporter1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/logo_margin"/>

    <ImageView
        android:id="@+id/logo_supporter3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sponsor_height"
        android:layout_below="@id/logo_supporter1"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="true"
        android:src="@drawable/trustmedis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_supporter1"/>

    <ImageView
        android:id="@+id/logo_supporter4"
        android:layout_width="69dp"
        android:layout_height="27dp"
        android:layout_below="@id/logo_supporter1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/logo_supporter3"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_profilku___for_light_bg"
        app:layout_constraintStart_toEndOf="@+id/logo_supporter3"
        app:layout_constraintTop_toBottomOf="@+id/logo_supporter2" />

    <ImageView
        android:id="@+id/logo_supporter5"
        android:layout_width="79dp"
        android:layout_height="36dp"
        android:layout_below="@id/logo_supporter1"
        android:layout_toEndOf="@id/logo_supporter3"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_alterra"
        app:layout_constraintStart_toEndOf="@+id/logo_supporter4"
        app:layout_constraintTop_toBottomOf="@+id/logo_supporter2" />
</androidx.constraintlayout.widget.ConstraintLayout>